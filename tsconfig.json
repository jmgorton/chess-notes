{  
  "compilerOptions": {  
    "target": "es2018", // "es5",  
    // "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,  
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,  
    "strict": true,  
    "forceConsistentCasingInFileNames": true,  
    "noEmit": true,  
    "esModuleInterop": true,  
    "module": "commonjs",  
    "moduleResolution": "node",  
    "resolveJsonModule": true,  
    "isolatedModules": true,  
    "jsx": "react"  
  },  
  "include": ["src/**/*"],  
  "exclude": ["node_modules"]  
}